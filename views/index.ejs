<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Note App</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .line-clamp-3 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }
        .hidden {
            display: none;
        }
        .task-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 1rem;
        }
        .task-actions a, .task-actions button {
            margin-right: 1rem;
        }
    </style>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 flex items-start justify-center py-10">
        <div class="form bg-zinc-800 w-96 rounded shadow-md mr-10">
            <form action="/create" method="POST" class="space-y-4 p-6">
                <div>
                    <label for="heading" class="block text-gray-200">Heading</label>
                    <input type="text" id="heading" name="title" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-zinc-700 text-white">
                </div>
                <div>
                    <label for="note" class="block text-gray-200">Note</label>
                    <textarea id="note" name="details" rows="6" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-zinc-700 text-white resize-none"></textarea>
                </div>
                <div>
                    <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Submit</button>
                </div>
            </form>
        </div>

        <div class="tasks space-y-4">
            <% if (files.length > 0) { %>
                <% files.forEach(function(file, index) { %>
                    <div class="task w-96 px-5 py-4 rounded bg-zinc-800 shadow-md">
                        <h1 class="text-lg font-semibold text-gray-200"><%= file.fileName %></h1>
                        <p class="text-gray-400 mt-2 line-clamp-3" id="task<%= index %>-content">
                            <%= file.content %>
                        </p>
                        <div class="task-actions">
                            <a href="/file/<%=file.fileName%>" class="text-indigo-400 hover:underline">Read More</a>
                            <a href="/edit/<%=file.fileName%>" class="text-yellow-400 hover:underline">Edit</a>
                            <form action="/delete/<%=file.fileName%>" method="POST" class="inline">
                                <button type="submit" class="text-red-400 hover:underline">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-lg font-semibold text-gray-200">No Tasks Found</h1>
            <% } %>
        </div>
    </div>
</body>
</html>
